/* Overall */
html, body, textarea, td, th {
	font-family: sans-serif;
	font-size: small;
}

/* Layout and Spacing */
body {
	margin: 0px;
	margin-bottom: 20px;
}
#header {
	margin: 0px;
	padding-top: 0.5ex;
	overflow: hidden;
}
h1 {
	margin: 0px 100px 0.5ex 0.5ex;
}
#account-details {
	float: right;
	width: auto;
	text-align: right;
	white-space: nowrap;
	padding: 2px 2ex 4px 0px;
	position: absolute;
	right: 2px;
}
#account-details form, #quick-search-box form {
	margin: 0px;
	padding: 0px;
}
#body {
	padding: 1ex 35px;
	max-width: 110ex;
}
ul#nav {
	padding: 0px;
	margin: 0px;
	margin-right: 15ex;
	border-left: 1px solid;
	height: auto;
	width: auto;
	border-bottom: 1px solid transparent;
}
ul#nav li {
	list-style-type: none;
	display: block;
	float: left;
	width: auto;
	margin: 0px;
	white-space: nowrap;
	font-weight: bold;
}
ul#nav li a, ul#nav li span  {
	width: auto;
	text-decoration: none;
	white-space: nowrap;
	padding: 3px 10px;
	margin: 0px;
	display: block;
	border: 1px solid;
	border-left: 0px;
	border-bottom: 0px;
}
ul#nav li span {
 cursor: default;
}
ul#nav li ul {
	position: absolute;
	margin: 0px;
	padding: 0px;
	border-bottom: 1px solid;
	border-left: 1px solid;
}
ul#nav li ul li {
	width: 30ex;
	float: none;
	margin: 0px;
	padding: 0px;
}
.clear {
	clear: both;
}
h2, h3, h4, h5 {
	margin: 1.5ex 0px 0.5ex 0px;
	padding: 0px;
}
#body h2 {
	margin-top: 0.8ex;
}
#body h3 {
	margin-top: 2ex;
}
h5 {
}
body form table td, body form table th {
	border: 0px;
}

div.tabbertab table tbody th {
	width: 12%;
	white-space: nowrap;
}
table th {
	text-align: left;
}
table thead th {
	text-align: center;
}
table td, table th {
	vertical-align: top;
}
body div#login-box {
	position: absolute;
	top: 50%;
	left:50%;
	width: auto;;
	margin-left: -150px;
	margin-top: -100px;
}
/* Standard Elements */
table {
	border-collapse: collapse;
}
#body table.standard {
	border: 1px solid;
	margin: 0.5ex 0.5ex 0.5ex 0px;
}

#body table.standard th, #body table.standard td {
	padding: 2px 4px;
	border: 1px solid;
}

table.big {
	width: 100%;
}

table.big td, table.big th {
	padding: 7px;
}

table.big form td, table.big form th {
	border: 0px;
	padding: 2px;
}

table.big th {
}

table.big td table {
	width: 98%;
}

div.standard {
	border: 1px solid;
	padding: 1ex;
	margin: 0.5ex 0.5ex 1ex 0px;
}

div.standard h3, #body div.standard h3, #body div.standard h4 {
	font-size: 100%;
	padding: 2px 4px;
	margin: -1ex -1ex 1ex -1ex;
}
.action-box {
	float: right;
	clear: right;
	width: 40ex;
	margin-left: 10px;
}
.indent-left, body div#body .indent-left {
	margin-left: 10ex;
}

/* General Useful things */
.clickable {
	cursor: pointer;
	text-decoration: underline
}
.nowrap {
	white-space: nowrap;
}
.selector {
	text-align: center;
}
.float-right {
	float: right;
	margin: 0px;
	padding: 0px;
	border: 0px;
	background: none;
	font-weight: normal;
	margin-left: 2ex;
}
.align-right {
	text-align: right;
	margin: 0.5ex;
	padding: 0px;
	border: 0px;
	background: none;
	font-weight: normal;
	line-height: 1.4;
}
table.clickable-rows td {
	cursor: pointer;
}
.success {
	border: 1px solid green;
	background: #ddffdd;
	padding: 1ex;
}
.failure {
	border: 1px solid red;
	background: #ffcccc;
	padding: 1ex;
}
.message {
	margin: 5px 10px;
}
.smallprint, .field-note {
	margin: 1px;
	font-size: 80%;
	color: #444;
}
.field-note {
	margin-bottom: 3px;
}
div.popup {
	position: absolute;
	width: 300px;
	padding: 10px;
	border: 1px solid black;
	top: 50%;
	left: 50%;
	margin-left: -160px;
	margin-top: -55px;
	text-align: center;
}
ul {
	margin-top: 0.5ex;
	margin-bottom: 0.5ex;
}

/* COLOURS */
body {
	background-color: #FCF7C2;
}
#header {
	background-color: #A6ACC2;
	border-bottom: 1px solid #60707B;
}
#account-details a {
	color: black;
}
h1 {
	color: #FFF19B;
}
ul#nav li {
	background-color: #E0E8CA;
	color: #60707B;
}
ul#nav li a {
	color: #60707B;
	font-weight: bold;
	border-color: #60707B;
}
ul#nav li a:hover, ul#nav li a.current {
	background: #60707B;
	color: #FFF19B;
	border-color: #60707B;
}
h3 {
	color: #60707B;
	border-bottom: 1px solid #A6ACC2;
}
h4 {
	color: #60707B;
}
h4 strong {
	color: black;
}
h5 {
}
#body table.standard, #body table.standard td, #body table.standard th, #body div.standard, div.standard {
	background: #FFF19B;
	border-color: #60707B;
}
#body table.standard th, div.standard h3, #body div.standard h3, #body div.standard h4 {
	background: #A6ACC2;
	color: #FCF7C2;
	font-weight: bold;
}
#body a, #body a:hover, #body a:visited {
	color: #60707B;
	font-weight: bold;
}
table tr.missing td {
	background: yellow;
}
#body table.hoverable tr.tblib-hover td {
	background: #E0E8CA;
}
table.big td, table.big th {
	border: 1px solid #aaa;
}
.tabbertab {
	background: #FFF19B;
	overflow: auto;
}

.tabbernav li a {
	background: #E0E8CA;
}
#body ul.tabbernav li a:hover {
	background-color: #60707B;
	color: #FFF19B;
}
ul.tabbernav li.tabberactive a, #body ul.tabbernav li.tabberactive a:hover {
	background-color:  #FFF19B;
	border-bottom: 1px solid  #FFF19B;;
	color: #60707B;
}


/* Attendance Recording */
select.present {
	background: green;
	color: white;
}
select.absent {
	background: red;
	color: black;
}
html>body select option {
	background: white;
	color: black;
}
.selected td {
	background: #dde;
}
.present {
	color: green;
}
.absent {
	color: red;
}

/* Notes list */
table.family-note td.icon {
	background-image: url(family.gif);
}
table.person-note td.icon {
	background-image: url(person.gif);
}

table.notes-history-entry {
	margin-bottom: 0.5ex;
	margin-top: 0.5ex;
	border: 1px solid blue;
}
table.notes-history-entry td.created {
	text-align: right;
}
table.notes-history-entry td {
	background: #ddddff;
	border: 0px;
	padding: 2px;
}
table.notes-history-entry tr td.status {
	width: 15%;
	padding: 5px;
	text-align: center;
}
table.notes-history-entry tr td.status p {
	margin-top: 1.5ex;
}
table.notes-history-entry td.icon {
	width: 26px;
	text-align: center;
	padding: 5px;
	background-position: 50% 7px;
	background-repeat: no-repeat;
}
div.family-notes table.notes-history-entry tr td.icon {
	width: 0px;
	background-image: none;
	padding: 0px;
}
table.notes-history-entry td h4 {
	margin: 1px;
}
table.notes-history-entry td p {
	margin: 1px;
}
table.notes-history-entry td p.author {
	font-style: italic;
	font-size: 90%;
	color: #555;
	margin-top: 3px;
}
table.notes-history-entry td h5 {
	margin: 2px 1px 2px 1px;
	color: #333;
}
table.notes-history-entry td ul {
	margin-top: 0px;
	margin-bottom: 0px;
}
table.notes-history-entry td div.content {
	background: #eee;
	margin: 0px;
	padding: 2px;
}
ul.comments li {
	margin-bottom: 1px;
}
table.notes-history-entry td div.content h4 {
	color: black;
}
/* task list */
.task-list tr td {
	height: 25px;
	vertical-align: middle;
}
.task-list td.icon {
	padding: 2px 3px 0px 3px;
	text-align: center;
}

table tr.missing td {
	background: yellow;
}

/* person finder */
.found {
	background: #efe;
}

/* bulk action */
.bulk-action {
	display: none;
}

/* create-person form elements */
form#add-family select.person-congregation {
	width: 10ex;
	padding-left: 1px;
}

/* person list */
table.person-list td {
   white-space: nowrap;
}

#quick-search-box {
	width: 35ex;
	margin: 1ex;
	position: absolute;
	right: 0px;
	display: none;
}

#quick-search-link {
	margin-top: 3px;
}